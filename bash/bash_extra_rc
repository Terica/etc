# Relevance "etc" scripts
if [ -d ~/opensource/etc/bash ]; then
    source ~/opensource/etc/bash/git.sh
    source ~/opensource/etc/bash/git_autocompletion.sh
    source ~/opensource/etc/bash/git_prompt.sh
    source ~/opensource/etc/bash/ssh_autocompletion.sh
    source ~/opensource/etc/bash/rails.sh
    source ~/opensource/etc/bash/reagent.sh
fi

# Local executables
export PATH=$HOME/bin:$PATH

# Pairhost aliases
#alias sourcecode="truecrypt -t -k '' --protect-hidden=no $HOME/sourcecode.tc $HOME/src"

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

if [ -f /opt/rbenv/bin/rbenv ] ; then
   export PATH=~/.rbenv/bin:/opt/rbenv/bin:$PATH
   eval "$(rbenv init -)"
elif [ -f /usr/local/bin/rbenv ] ; then
    export PATH=~/.rbenv/bin:$PATH
   eval "$(rbenv init -)"
fi
